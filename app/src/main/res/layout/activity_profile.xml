<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".ProfileActivity">


        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@color/colorAccent"
            android:background="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="30dp">

        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/judul"
            android:text="Personal Info"
            android:textSize="40sp"
            android:fontFamily="@font/futura_pt_demibold"
            android:textColor="#070000"
            app:layout_constraintTop_toBottomOf="@id/btn_edit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp">

        </TextView>

        <ImageView
            android:id="@+id/ft_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/judul"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/plh_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/edit_icon"
            app:layout_constraintBottom_toBottomOf="@id/ft_profil"
            app:layout_constraintRight_toRightOf="@id/ft_profil">

        </ImageButton>

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:text="About me"
            android:textColor="#FCAAA5A5"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/ft_profil"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints">

        </TextView>

        <TextView
            android:id="@+id/about_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/futura_pt_demibold"
            android:text="I think this is one of the most important qualities to have as a driver. Show responsibility for other traffic participants."
            android:textColor="#070000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.434"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/about"
            tools:ignore="MissingConstraints">

        </TextView>

        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/grey_line_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/about_full">

        </ImageView>

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:text="Full name"
            android:textColor="#FCAAA5A5"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints">

        </TextView>

        <TextView
            android:id="@+id/full_name_isi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:textColor="#070000"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:textAlignment="textEnd"
            tools:ignore="MissingConstraints"
            android:layout_gravity="end">

        </TextView>

        <ImageView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/grey_line_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/full_name">

        </ImageView>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:text="Email"
            android:textColor="#FCAAA5A5"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints">

        </TextView>

        <TextView
            android:id="@+id/email_isi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:textColor="#070000"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:textAlignment="textEnd"
            tools:ignore="MissingConstraints"
            android:layout_gravity="end">

        </TextView>

        <ImageView
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/grey_line_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email">

        </ImageView>

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:text="Gender"
            android:textColor="#FCAAA5A5"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/line3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints">

        </TextView>

        <TextView
            android:id="@+id/gender_isi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:textColor="#070000"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/line3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:textAlignment="textEnd"
            tools:ignore="MissingConstraints"
            android:layout_gravity="end">

        </TextView>

        <ImageView
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/grey_line_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gender">

        </ImageView>

        <TextView
            android:id="@+id/phone_isi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:textColor="#070000"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/line4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:textAlignment="textEnd"
            tools:ignore="MissingConstraints"
            android:layout_gravity="end">

        </TextView>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:text="Phone No."
            android:textColor="#FCAAA5A5"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/line4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints">

        </TextView>

        <ImageView
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/grey_line_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone">

        </ImageView>

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:text="City"
            android:textColor="#FCAAA5A5"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/line5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints">

        </TextView>

        <TextView
            android:id="@+id/city_isi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:textColor="#070000"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/line5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:textAlignment="textEnd"
            tools:ignore="MissingConstraints"
            android:layout_gravity="end">

        </TextView>

        <ImageView
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/grey_line_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city">

        </ImageView>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:text="Address"
            android:textColor="#FCAAA5A5"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/line6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints">

        </TextView>

        <TextView
            android:id="@+id/address_isi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_demibold"
            android:textColor="#070000"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/line6"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:textAlignment="textEnd"
            tools:ignore="MissingConstraints"
            android:layout_gravity="end">

        </TextView>

        <ImageView
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/grey_line_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address">

        </ImageView>


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>
